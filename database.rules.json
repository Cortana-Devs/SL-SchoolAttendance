{
  "rules": {
    ".read": false,
    ".write": false,
    "users": {
      ".read": "auth != null",
      ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'admin')",
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "students": {
      ".read": "auth != null",
      ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'admin' || root.child('users').child(auth.uid).child('role').val() === 'teacher')",
      "$studentId": {
        ".validate": "newData.hasChildren(['name', 'grade', 'class', 'registrationNumber'])"
      }
    },
    "attendance": {
      ".read": "auth != null",
      ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'admin' || root.child('users').child(auth.uid).child('role').val() === 'teacher')",
      "$date": {
        "$class": {
          ".validate": "newData.hasChildren(['academicYear', 'class', 'date', 'grade', 'section', 'period'])",
          "records": {
            "$studentId": {
              ".validate": "newData.hasChildren(['present', 'markedBy', 'markedTime', 'timestamp'])"
            }
          }
        }
      }
    },
    "stats": {
      "cached": {
        ".read": "auth != null",
        ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'admin' || root.child('users').child(auth.uid).child('role').val() === 'teacher')",
        "$statId": {
          ".validate": "newData.hasChildren(['data', 'timestamp'])",
          "data": {
            ".validate": "newData.hasChildren(['generatedAt', 'generatedBy'])"
          }
        }
      },
      "daily": {
        ".read": "auth != null",
        ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'admin' || root.child('users').child(auth.uid).child('role').val() === 'teacher')",
        "$date": {
          ".validate": "newData.hasChildren(['totalPresent', 'totalAbsent', 'totalStudents'])"
        }
      },
      "monthly": {
        ".read": "auth != null",
        ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'admin' || root.child('users').child(auth.uid).child('role').val() === 'teacher')",
        "$year": {
          "$month": {
            ".validate": "newData.hasChildren(['totalPresent', 'totalAbsent', 'totalStudents', 'averageAttendance'])"
          }
        }
      }
    }
  }
} 